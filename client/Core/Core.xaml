<Window x:Name="Core" x:Class="TRGLC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRGLC"
        mc:Ignorable="d"
        
        Loaded="Core_Loaded"
        
        Title="TRGLC" Height="1000" Width="1000" 
        MaxWidth="1000" MaxHeight="1000" 
        HorizontalContentAlignment="Stretch" 
        VerticalContentAlignment="Stretch"
        ScrollViewer.VerticalScrollBarVisibility="Disabled" 
        WindowStartupLocation="CenterScreen" Background="#FF161332" FontFamily="./#Bombardier">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Top" TextBlock.FontSize="20">
         <!--Background="#FF302D6E"-->

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Background="White" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Common" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier"/>
            </Border>

            <Border Grid.Column="1" Background="Lime" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Uncommon" HorizontalAlignment="Center" VerticalAlignment="Center" 
                           FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier">
                </TextBlock>
            </Border>

            <Border Grid.Column="2" Background="Red" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Legendary" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier"/>
            </Border>

            <Border Grid.Column="3" Background="Yellow" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Boss" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier"
                       />
            </Border>

            <Border Grid.Column="0" Background="#FFC000C0" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton" Grid.Row="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Void" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier" Foreground="White"
                       />
            </Border>

            <Border Grid.Column="1" Background="Blue" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton" Grid.Row="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Lunar" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier" TextDecorations="{x:Null}" Foreground="White"/>
            </Border>

            <Border Grid.Column="2" Background="#FFFF8000" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton" Grid.Row="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Equipment" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier" Foreground="White"/>
            </Border>

            <Border Grid.Column="3" Background="Gray" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton" Grid.Row="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Other" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier" Foreground="White"/>
            </Border>
        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
            </Grid>

            <Border Grid.Column="2" Background="White" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Lobbies" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier"/>
            </Border>

            <Border Grid.Column="1" Background="White" Padding="0" Margin="5" CornerRadius="8" Cursor="Hand"
                    Tag="StickyButton">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="6"/>
                </Border.Effect>
                <TextBlock Text="Profiles" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="26" FontFamily="pack://application:,,,/resources/main/#Bombardier"/>
            </Border>

        </Grid>
        
    </Grid>

</Window>