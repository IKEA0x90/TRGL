<UserControl x:Class="TRGLC.Shop.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRGLC.Shop"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="260">
    <Grid>
        <Border Cursor="Hand"
                    Grid.RowSpan="2" BorderBrush="#FF292929" BorderThickness="2" CornerRadius="9"
                    IsHitTestVisible="False" Panel.ZIndex="-2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="1" RenderingBias="Quality" ShadowDepth="2"/>
            </Border.Effect>
        </Border>

        <Border Background="#FFFFFF" CornerRadius="8" Cursor="Hand"
                    Tag="ItemButton" Opacity="0.25" Margin="2" Grid.RowSpan="2">
            <Border.Effect>
                <BlurEffect KernelType="Box" Radius="1"/>
            </Border.Effect>
        </Border>

        <Border Background="White" CornerRadius="8" Cursor="Hand"
                    IsHitTestVisible="False" x:Name="ItemLight" Margin="2" Grid.RowSpan="2" Panel.ZIndex="-1" Opacity="0">
            <Border.Effect>
                <BlurEffect KernelType="Box" Radius="3.4"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
